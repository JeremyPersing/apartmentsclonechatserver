{
    "compilerOptions": {
      "strict": true,
      "module": "commonjs",
      "target": "es6",
      "outDir": "./dist",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "typeRoots": ["./src/types", "./node_modules/@types"],
      "removeComments": true
    },
    "include": ["src/**/*.ts" /* Include every ts file in source folder */],
    "exclude": ["node_modules" /* exclude everything in  node_modules */]
  }